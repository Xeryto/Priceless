@model Priceless.Models.Course

@{ ViewData["Title"] = "Delete"; }

<div class="container">
    <div class="row">
        <div class="col-md-2"></div>
        <div class="col-md-4">
            <div class="wsk-cp-product">
                <div class="wsk-cp-img">
                    @{ if (Model.Image == null)
                        {
            <img src="~/img/major.png" alt="courseImage" class="img-responsive" /> }
        else
        {
            <img src="@Model.Image" alt="courseImage" class="img-responsive" /> } }
                </div>
                <div class="wsk-cp-text">
                    <div class="title-product">
                        <h3>@Model.Title</h3>
                    </div>
                    <div class="description-prod">
                        <p>@Model.Link</p>
                        <p>
                            Вы уверены что хотите удалить этот курс?
                        </p>
                        <form asp-action="Delete">
                            <input type="hidden" asp-for="Id" />
                            <input type="submit" value="Удалить" class="btn btn-danger" /> |
                            <a asp-action="Index">Вернуться к списку</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
