@using System.Web.Helpers;
@using Priceless.Models.Helpers;


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Priceless</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" type="text/css" href="~/fonts/font-awesome-4.7.0/css/font-awesome.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/fonts/iconic/css/material-design-iconic-font.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/vendor/animate/animate.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/vendor/css-hamburgers/hamburgers.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/vendor/animsition/css/animsition.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/vendor/select2/select2.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/vendor/daterangepicker/daterangepicker.css">
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="icon" type="image/png" href="~/img/icons/favicon.ico" />
    <link rel="stylesheet" type="text/css" href="~/css/util.css">
    <link rel="stylesheet" type="text/css" href="~/css/main.css">
</head>
<body>
    <div class="wrapper">
        <header class="bg-custom">
            <div class="container" style="margin-bottom: -50px;">
                <div class="row">
                    <div class="col-md-6">
                        <nav class="navbar navbar-dark navbar-expand-sm">
                            <div class="btn-group bg-custom-3" style="border-radius: 20px;">
                                @{
                                    string ids;
                                    PersonCacheModel logged = null;
                                    if (Context.Request.Cookies.TryGetValue("Id", out ids))
                                    {
                                        logged = WebCache.Get("LoggedIn" + ids);
                                    }
                                    if (logged != null)
                                    {
                                        <div class="collapse navbar-collapse" id="navbar-list-4">
                                            <ul class="navbar-nav">
                                                <li class="nav-item dropdown">
                                                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                                        @{
                                                            if (logged.Image == null)
                                                            {
                                                                <img src="~/img/default-user-icon.jpg" alt="user" class="rounded-circle" />

                                                            }
                                                            else
                                                            {
                                                                <img src="data:image; base64,@Convert.ToBase64String(logged.Image)" alt="user" class="rounded-circle" />
                                                            }
                                                        }
                                                    </a>
                                                    <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                                                        <a class="dropdown-item" asp-controller="Home" asp-action="Logout">Log out</a>
                                                        @{
                                                            if (logged.Role == "Student")
                                                            {
                                                                <a class="dropdown-item" asp-controller="Students" asp-action="Details" asp-route-id="@logged.Id">Profile</a>
                                                                <a class="dropdown-item" asp-controller="Students" asp-action="Edit" asp-route-id="@logged.Id">Edit</a>
                                                                <a class="dropdown-item" asp-controller="Students" asp-action="Delete" asp-route-id="@logged.Id" asp-route-userId="@logged.Id">Delete</a>
                                                            }
                                                            else if (logged.Role == "Teacher")
                                                            {
                                                                <a class="dropdown-item" asp-controller="Teachers" asp-action="Details" asp-route-id="@logged.Id">Profile</a>
                                                                <a class="dropdown-item" asp-controller="Teachers" asp-action="Edit" asp-route-id="@logged.Id">Edit</a>
                                                                <a class="dropdown-item" asp-controller="Teachers" asp-action="Delete" asp-route-id="@logged.Id" asp-route-userId="@logged.Id">Delete</a>
                                                            }
                                                        }
                                                    </div>
                                                </li>
                                            </ul>
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="collapse navbar-collapse" id="navbar-list-4">
                                            <ul class="navbar-nav">
                                                <li class="nav-item dropdown">
                                                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                                        <span style="margin: 10px;">Войти</span>
                                                        <img src="~/img/default-user-icon.jpg" alt="user" class="rounded-circle" />
                                                    </a>
                                                    <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                                                        <a class="dropdown-item" asp-controller="Home" asp-action="Login">Log in</a>
                                                        <a class="dropdown-item" asp-controller="Home" asp-action="Register">Register</a>
                                                    </div>
                                                </li>
                                            </ul>
                                        </div>
                                    }
                                }
                            </div>
                        </nav>
                    </div>
                    <div class="col-md-6">
                        <nav class="navbar navbar-dark navbar-expand-sm">
                            <div class="bg-custom-3" style="border-radius: 20px; margin-left: auto; margin-right: 0;">
                                <div class="collapse navbar-collapse" id="navbar-list-4">
                                    <ul class="navbar-nav">
                                        <li class="nav-item dropdown">
                                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                                <img src="https://s3.eu-central-1.amazonaws.com/bootstrapbaymisc/blog/24_days_bootstrap/fox.jpg" class="rounded-circle">
                                                Ru
                                            </a>
                                            <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                                                <a class="dropdown-item" href="#" id="lngSwitch1">Russian</a>
                                                <a class="dropdown-item" href="#" id="lngSwitch2">English</a>
                                            </div>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </nav>
                    </div>
                </div>
            </div>
            <div class="container" style="text-align: center;">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><img src="~/img/logo.png" alt="logo" style="max-height: 70px; margin-right:0;" /></a>
            </div>
            <div class="container">
                <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light mb-3">
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                        <div style="display: block; margin: 0 auto;">
                            <ul class="navbar-nav flex-grow-1 bg-custom-2" style="text-align:center; border-radius: 20px;">
                                <li class="nav-item">
                                    <a class="nav-link exp" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link exp" asp-area="" asp-controller="Courses" asp-action="Index">Courses</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link exp" asp-area="" asp-controller="Majors" asp-action="Index">Majors</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link exp" asp-area="" asp-controller="Students" asp-action="Index">Students</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link exp" asp-area="" asp-controller="Teachers" asp-action="Index">Teachers</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </nav>
            </div>
        </header>
        <div class="container-fluid" style="margin-top: -16px;">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-2" style="text-align:center">
                    <img src="~/img/logo2_alt.png" alt="logo2" style="max-width: 100%;" class="helper" />
                </div>
                <div class="col-md-8">
                    <div class="container">
                        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light mb-3">
                            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                                    aria-expanded="false" aria-label="Toggle navigation">
                                <span class="navbar-toggler-icon"></span>
                            </button>
                            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                                <div style="display: block; margin: 0 auto;">
                                    <ul class="navbar-nav flex-grow-1 bg-custom-2" style="text-align:center; border-radius: 20px;">
                                        <li class="nav-item">
                                            <a class="nav-link exp" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                                        </li>
                                        <li class="nav-item">
                                            <a class="nav-link exp" asp-area="" asp-controller="Courses" asp-action="Index">Courses</a>
                                        </li>
                                        <li class="nav-item">
                                            <a class="nav-link exp" asp-area="" asp-controller="Majors" asp-action="Index">Majors</a>
                                        </li>
                                        <li class="nav-item">
                                            <a class="nav-link exp" asp-area="" asp-controller="Students" asp-action="Index">Students</a>
                                        </li>
                                        <li class="nav-item">
                                            <a class="nav-link exp" asp-area="" asp-controller="Teachers" asp-action="Index">Teachers</a>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </nav>
                    </div>
                    <div class="container" style="text-align: center;">
                        <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><img src="~/img/logo.png" alt="logo" style="max-height: 70px; margin-right:0;" /></a>
                    </div>
                    <div class="container" style="text-align: center;">
                        <a href="mailto:priceless.edu@gmail.com">priceless.edu@gmail.com</a>
                    </div>
                </div>
                <div class="col-md-2" style="text-align:center">
                    <img src="~/img/logo2_alt.png" alt="logo2" style="max-width: 100%;" class="helper" />
                </div>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/vendor/animsition/js/animsition.min.js"></script>
    <!--===============================================================================================-->
    <!--<script src="~/vendor/bootstrap/js/popper.js"></script>-->
    <!--===============================================================================================-->
    <script src="~/vendor/select2/select2.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/vendor/daterangepicker/moment.min.js"></script>
    <script src="~/vendor/daterangepicker/daterangepicker.js"></script>
    <!--===============================================================================================-->
    <script src="~/vendor/countdowntime/countdowntime.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/main.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
