@model Priceless.Models.Exercise

@{ ViewData["Title"] = "Create"; }

<div class="row">
    <div class="col-md-12" style="display: flex; justify-content: center; align-content:center;">
        <form asp-action="Create" style="width: 80%">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Json" id="input" />
            <input type="hidden" asp-for="CourseId" value="@ViewBag.CourseId" />
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Deadline" class="control-label"></label>
                <input asp-for="Deadline" class="form-control" />
                <span asp-validation-for="Deadline" class="text-danger"></span>
            </div>
            <hr />
            <div id="editorjs"></div>
            <div class="form-group" style="text-align:center">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div style="text-align:center;">
    <a asp-action="Exercises" asp-controller="Courses" asp-route-id="@ViewBag.CourseId">Back to List</a>
</div>

<script src="~/js/editorjs.js"></script>

<script>
    editor(false);
</script>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
