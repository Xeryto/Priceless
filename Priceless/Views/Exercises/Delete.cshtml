@model Priceless.Models.Exercise

@{ ViewData["Title"] = "Delete"; }

<h3 style="text-align:center; margin-top: 15px;">Are you sure you want to delete this?</h3>
<hr />
<div>
    <h4 style="text-align:center; margin-top: 10px;">@Model.Title</h4>
    <h4 style="text-align:center;">Until @Model.Deadline</h4>
    <div id="editorjs"></div>

    <form asp-action="Delete" style="text-align:center">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Exercises" asp-controller="Courses" asp-route-id="@Model.CourseId">Back to List</a>
    </form>
</div>

<script src="~/js/editorjs.js"></script>

<script>
    editor(false, JSON.parse("@Model.Json".replace(/&quot;/g, '"')));
</script>