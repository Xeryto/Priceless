        </div>
        <div class="wsk-cp-text">
            <div class="title-product">
                <h3>@course.Title</h3>
            </div>
            <div class="description-prod">
                <a asp-controller="Courses" asp-action="Details" asp-route-id="@course.Id" class="stretched-link"></a>
