        }
    else
        {
            <div class="takeup">
<span class="text-danger">Только студент и учителя могут просматривать эту страницу</span>
        </div>
            
        }
    }
    else
    {
        <div class="takeup">
<span class="text-danger"><a asp-action="Login" asp-controller="Home">Вы должны сперва войти в систему</a></span>
        </div>
        
    }
}

