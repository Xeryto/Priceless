@using Priceless.Models.Helpers;

@model PersonLoginModel;

@{
    ViewData["Title"] = "Login";
}

<div class="container">
    <div class="row">
        <div class="col-md-4"></div>
        <div class="col-md-4" align="center">
            <div style="border: 0.1rem solid black;">
                <form asp-controller="Home" asp-action="Login" method="post">
                    <div class="form-group">
                        <label asp-for="Login" class="control-label"></label>
                        <p></p>
                        <input asp-for="Login" required />
                        <span asp-validation-for="Login" class="text-danger"></span>
                    </div>
                    <div class="form-group formMargin">
                        <label asp-for="Password" class="control-label"></label>
                        <p></p>
                        <input asp-for="Password" type="password" required />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-group formMargin">
                        <button type="submit">Log in</button>
                    </div>
                </form>
                @if (Model != null)
                {
                    if (Model.InfoNotValid)
                    {
                        <p><span class="text-danger">Login or password is incorrect. Try again</span></p>
                    }
                }
            </div>
            <p>Not registered yet? <a asp-controller="Home" asp-action="Register">Register here</a></p>
        </div>
        <div class="col-md-4"></div>
    </div>
</div>