@using Priceless.Models.Helpers;

@model PersonLoginModel;

@{
    ViewData["Title"] = "Login";
}

<div class="limiter">
    <div class="container-login100">
        <div class="wrap-login100">
            <form class="login100-form validate-form" asp-action="Login" method="post">
                <span class="login100-form-title p-b-26">
                    Welcome
                </span>

                <div class="wrap-input100 validate-input" data-validate="Valid email is: a@b.c">
                    @{
                        if (Model != null)
                        {
                            if (Model.InfoNotValid)
                            {
                                <input class="input100 has-val" type="email" asp-for="Login">
                            }
                            else
                            {
                                <input class="input100" type="email" asp-for="Login">
                            }
                        }
                        else
                        {
                            <input class="input100" type="email" asp-for="Login">
                        }
                    }
                    <span class="focus-input100" data-placeholder="Email"></span>
                </div>

                <div class="wrap-input100 validate-input" data-validate="Enter password">
                    <span class="btn-show-pass">
                        <i class="zmdi zmdi-eye"></i>
                    </span>
                    <input class="input100" type="password" asp-for="Password">
                    <span class="focus-input100" data-placeholder="Password"></span>
                </div>

                <div class="container-login100-form-btn">
                    <div class="wrap-login100-form-btn">
                        <div class="login100-form-bgbtn"></div>
                        <button class="login100-form-btn" type="submit">
                            Login
                        </button>
                    </div>
                </div>

                @if (Model != null)
                {
                    if (Model.InfoNotValid)
                    {
                        <p><span class="text-danger">Login or password is incorrect. Try again</span></p>
                    }
                }

                <div class="text-center p-t-30">
                    <span class="txt1">
                        Don’t have an account?
                    </span>

                    <a class="txt2" asp-action="Register">
                        Sign Up
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>


